<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtAvailability"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="25dp"
        android:text="Select Your Availability"
        android:textSize="15dp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spinnerAvailability"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/txtAvailability"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/rounded_spinner_background"
        android:entries="@array/availability_dropdown"
        android:drawableEnd="@drawable/ic_baseline_arrow_drop_down_24"/>

    <TextView
        android:id="@+id/txtStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Your Status"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_below="@+id/spinnerAvailability"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"/>

    <EditText
        android:id="@+id/etStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtStatus"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/rounded_edit_text_background"
        android:maxLength="250"
        android:paddingLeft="15dp"
        android:paddingTop="5dp"
        android:paddingRight="15dp"
        android:paddingBottom="25dp"
        android:scrollHorizontally="false"
        android:text="Hi community! I am open to new connections &quot;ðŸ˜Š&quot;"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/txtCharacterCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="47/250"
        android:textSize="14dp"
        android:layout_below="@+id/etStatus"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:layout_alignParentRight="true"/>

    <TextView
        android:id="@+id/txtDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Hyper local Distance"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_below="@+id/etStatus"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/txtProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtDistance"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:background="@drawable/ic_baseline_chat_bubble_24"
        android:text="50"
        android:paddingLeft="6dp"
        android:paddingTop="3dp"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold" />

    <SeekBar
        android:id="@+id/simpleSeekBar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtDistance"
        android:layout_marginTop="45dp"
        android:max="100"
        android:min="1"
        android:paddingLeft="100dp"
        android:progress="50" />

    <TextView
        android:id="@+id/txtMinDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 Km"
        android:textSize="14dp"
        android:layout_below="@+id/simpleSeekBar"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="2dp" />

    <TextView
        android:id="@+id/txtMaxDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100 Km"
        android:textSize="14dp"
        android:layout_below="@+id/simpleSeekBar"
        android:layout_marginRight="15dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="2dp" />

    <TextView
        android:id="@+id/txtPurpose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtMinDistance"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:text="Select Purpose"
        android:textSize="15dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnP1"
        android:layout_width="76dp"
        android:layout_height="36dp"
        android:layout_below="@+id/txtPurpose"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/rounded_button_background"
        android:paddingLeft="4dp"
        android:paddingTop="3dp"
        android:paddingRight="8dp"
        android:paddingBottom="3dp"
        android:text="Coffee"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="14dp" />

    <Button
        android:id="@+id/btnP2"
        android:layout_width="92dp"
        android:layout_height="36dp"
        android:layout_below="@+id/txtPurpose"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/btnP1"
        android:background="@drawable/rounded_button_background"
        android:paddingLeft="6dp"
        android:paddingTop="3dp"
        android:paddingRight="10dp"
        android:paddingBottom="3dp"
        android:text="Business"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="14dp" />

    <Button
        android:id="@+id/btnP3"
        android:layout_width="86dp"
        android:layout_height="36dp"
        android:layout_below="@+id/txtPurpose"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/btnP2"
        android:background="@drawable/rounded_buttton_white_background"
        android:paddingLeft="4dp"
        android:paddingTop="3dp"
        android:paddingRight="8dp"
        android:paddingBottom="3dp"
        android:text="Hobbies"
        android:textAllCaps="false"
        android:textColor="@color/light_prussian"
        android:textSize="14dp" />

    <Button
        android:id="@+id/btnP4"
        android:layout_width="100dp"
        android:layout_height="36dp"
        android:background="@drawable/rounded_button_background"
        android:layout_below="@+id/txtPurpose"
        android:layout_toRightOf="@+id/btnP3"
        android:layout_marginLeft="8dp"
        android:text="Friendship"
        android:layout_marginTop="15dp"
        android:paddingTop="3dp"
        android:paddingLeft="6dp"
        android:paddingBottom="3dp"
        android:paddingRight="10dp"
        android:textSize="14dp"
        android:textColor="#FFFFFF"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btnP5"
        android:layout_width="76dp"
        android:layout_height="36dp"
        android:layout_below="@+id/btnP1"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/rounded_buttton_white_background"
        android:paddingLeft="4dp"
        android:paddingTop="3dp"
        android:paddingRight="8dp"
        android:paddingBottom="3dp"
        android:text="Movies"
        android:textAllCaps="false"
        android:textColor="@color/light_prussian"
        android:textSize="14dp" />
    <Button
        android:id="@+id/btnP6"
        android:layout_width="84dp"
        android:layout_height="36dp"
        android:background="@drawable/rounded_buttton_white_background"
        android:layout_below="@+id/btnP1"
        android:layout_toRightOf="@+id/btnP5"
        android:layout_marginLeft="8dp"
        android:text="Dinning"
        android:layout_marginTop="15dp"
        android:paddingTop="3dp"
        android:paddingLeft="6dp"
        android:paddingBottom="3dp"
        android:paddingRight="10dp"
        android:textSize="14dp"
        android:textColor="@color/light_prussian"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btnP7"
        android:layout_width="76dp"
        android:layout_height="36dp"
        android:background="@drawable/rounded_buttton_white_background"
        android:layout_below="@+id/btnP1"
        android:layout_toRightOf="@+id/btnP6"
        android:layout_marginLeft="8dp"
        android:text="Dating"
        android:layout_marginTop="15dp"
        android:paddingTop="3dp"
        android:paddingLeft="4dp"
        android:paddingBottom="3dp"
        android:paddingRight="8dp"
        android:textSize="14dp"
        android:textColor="@color/light_prussian"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btnP8"
        android:layout_width="104dp"
        android:layout_height="36dp"
        android:background="@drawable/rounded_buttton_white_background"
        android:layout_below="@+id/btnP1"
        android:layout_toRightOf="@+id/btnP7"
        android:layout_marginLeft="8dp"
        android:text="Matrimony"
        android:layout_marginTop="15dp"
        android:paddingTop="3dp"
        android:paddingLeft="6dp"
        android:paddingBottom="3dp"
        android:paddingRight="10dp"
        android:textSize="14dp"
        android:textColor="@color/light_prussian"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="220dp"
        android:layout_height="36dp"
        android:layout_below="@+id/btnP5"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/rounded_button_background"
        android:layout_centerHorizontal="true"
        android:paddingLeft="6dp"
        android:paddingTop="3dp"
        android:paddingRight="10dp"
        android:paddingBottom="3dp"
        android:text="Save &amp; Explore"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="14dp" />

</RelativeLayout>